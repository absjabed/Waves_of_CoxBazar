<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainui7"
    tools:context="com.parvez_n_jabed_co.waves_of_coxbazar.InfoActivity">

    <ImageView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/fg"/>

    <!--<ImageView
        android:layout_width="160dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="160dp"
        android:src="@drawable/cccfinallogo"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:weightSum="5"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/abtiemail"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/abtisms"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/abtishare"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/abtplayiconf"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/abtiabtus"
            android:layout_height="wrap_content" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="5dp"
        android:weightSum="5"
        android:orientation="horizontal">
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="onClickEmail"
            android:id="@+id/btnEmailUs"
            android:src="@drawable/abtiemail"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btnMessageUs"
            android:onClick="onClickMessage"
            android:src="@drawable/abtisms"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btnShareUs"
            android:onClick="onClickShare"
            android:src="@drawable/abtishare"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/btnPlayStore"
            android:onClick="onClickPlay"
            android:src="@drawable/abtplayiconf"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:onClick="onClickAboutUs"
            android:id="@+id/btnAboutUs"
            android:src="@drawable/abtiabtus"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:gravity="center"
        android:weightSum="5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/email"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="16sp"
            android:text="Email Us"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sms"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Send sms"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/share"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="16sp"
            android:text="Share"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/play"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:gravity="center"
            android:text="Play"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/about"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:gravity="center"
            android:text="About Us"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="visible"
        android:src="@drawable/mainico11web"/>

</LinearLayout>
